@model PortfolioWebApp.Models.Work

@using (Html.BeginForm())
{
    <div class="bg-light m-3 p-5">
        <div class="form-group row ">
            <label for="staticEmail" class="col-sm-2 col-form-label">User</label>
            <div class="col-sm-10">
                @Html.HiddenFor(m => m.UserId)
                <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Session["userName"].ToString()">


            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Work Details</label>            
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Details, new { @class = "form-control", autofocus = "", rows = "5", cols = "25", placeholder = "Today's work details" })

            </div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-10">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary m-3" value="Save" />
                    </div>
                    <div class="col-6">
                        <input type="reset" class="btn btn-info m-3" value="Clear" />
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-info">
            @ViewBag.StatusMsg
        </div>
    </div>
}