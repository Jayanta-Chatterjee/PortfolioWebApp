<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-12 col-form-label col-form-label-lg">Full Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="colFormLabelSm" placeholder="Full Name" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabel" class="col-sm-12 col-form-label-lg">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="colFormLabel" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelLg" class="col-sm-12 col-form-label col-form-label-lg">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="colFormLabelLg" placeholder="Password" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelLg" class="col-sm-12 col-form-label col-form-label-lg">Confirm Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="colFormLabelLg" placeholder="Confirm Password" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-success btn-lg">Save</button>

                            </div>
                            <div class="col-sm-6">
                                <button type="reset" class="btn btn-info btn-lg">Clear</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>